<?xml version="1.0" encoding="utf-8" ?>
<widget id="com.myplaceonline" version="1.0.1" xmlns="http://www.w3.org/ns/widgets">
  <name>myplaceonline</name>
  <description>myplaceonline is a virtual life assistant. https://myplaceonline.com/</description>
  <author email="contact@myplaceonline.com" href="https://myplaceonline.com/">contact@myplaceonline.com</author>

  <!-- https://github.com/phonegap-build/docs-en/blob/master/configuring/preferences.md -->
  <preference name="phonegap-version" value="cli-5.2.0" />
  <preference name="orientation" value="default" />
  <preference name="fullscreen" value="false" />
  <preference name="webviewbounce" value="true" />
  <preference name="show-splash-screen-spinner" value="true" />
  <preference name="auto-hide-splash-screen" value="true" />
  <preference name="permissions" value="none" />
  <preference name="KeepRunning" value="true" />

  <plugin name="cordova-plugin-device" />
  <plugin name="cordova-plugin-inappbrowser" />
  <plugin name="cordova-plugin-splashscreen-3" />
  <plugin name="cordova-universal-clipboard" />

  <!-- https://www.npmjs.com/package/cordova-plugin-whitelist -->
  <plugin name="cordova-plugin-whitelist" />
  <allow-navigation href="http://*/*" />
  <allow-navigation href="https://*/*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <access origin="*" />

  <platform name="android">
    <preference name="android-installLocation" value="auto" />
    <preference name="android-minSdkVersion" value="11" />
    
    <icon qualifier=""      src="icon.png" />
    <icon qualifier="ldpi"  src="www/res/icon/android/icon-36-ldpi.png" />
    <icon qualifier="mdpi"  src="www/res/icon/android/icon-48-mdpi.png" />
    <icon qualifier="hdpi"  src="www/res/icon/android/icon-72-hdpi.png" />
    <icon qualifier="xhdpi" src="www/res/icon/android/icon-96-xhdpi.png" />
    
    <splash qualifier=""           src="splash.png" />
    <splash qualifier="port-ldpi"  src="www/res/screen/android/screen-ldpi-portrait.png" />
    <splash qualifier="port-mdpi"  src="www/res/screen/android/screen-mdpi-portrait.png" />
    <splash qualifier="port-hdpi"  src="www/res/screen/android/screen-hdpi-portrait.png" />
    <splash qualifier="port-xhdpi" src="www/res/screen/android/screen-xhdpi-portrait.png" />
    <splash qualifier="land-ldpi"  src="www/res/screen/android/screen-ldpi-landscape.png" />
    <splash qualifier="land-mdpi"  src="www/res/screen/android/screen-mdpi-landscape.png" />
    <splash qualifier="land-hdpi"  src="www/res/screen/android/screen-hdpi-landscape.png" />
    <splash qualifier="land-xhdpi" src="www/res/screen/android/screen-xhdpi-landscape.png" />
    
    <allow-intent href="market:*" />
  </platform>
  
